{% block _product_review_form_widget %}
    {% if is_granted('product_review_create') %}

        {{ form_start(form, {attr: {class: 'product-raiting__form', 'novalidate': 'novalidate'}}) }}
            <h3>{{ 'smile.product_review.form.title'|trans }}</h3>
            <div class="form-row--rating">{{ form_row(form.rating) }}</div>

            <div class="star-review__wrapper">
                <label class="label label--full required">
                    {{ 'smile.product_review.form.rating_label'|trans }}
                    <em>*</em>
                </label>
                <div class="star-review--input"
                     data-page-component-module="smileproductreview/js/app/components/rating-component"
                     data-rate-value="0"
                >
                </div>
            </div>

            {{ form_row(form.comment) }}

            {% if app.user is null %}
                {{ form_row(form.author) }}
            {% endif %}

            {{ form_row(form.product) }}
            {{ form_row(form.customerUser) }}

            {% if isProtected is defined and isProtected %}
                {{ form_row(form.recaptcha) }}
            {% endif %}

            {{ form_row(form._token) }}

            <button type="submit" class="btn btn-info" id="smile-product-review-create">
                {{ 'smile.product_review.form.submit_button_text'|trans }}
            </button>
        {{ form_end(form, {'render_rest': false}) }}

    {% endif %}
{% endblock %}
